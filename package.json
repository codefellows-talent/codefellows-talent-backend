{
  "name": "codefellows-talent-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/codefellows-talent/codefellows-talent-backend.git",
  "author": "Ryan Felix <therjfelix@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./",
    "prestart": "babel src -d dist",
    "start": "node dist/index.js",
    "watch": "nodemon src/index.js --exec babel-node",
    "test": "jest --runInBand --coverage --verbose",
    "test-watch": "jest --runInBand --watchAll --coverage",
    "start-db": "mkdir -p ./db && mongod --dbpath ./db",
    "stop-db": "killall mongod"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/__test__/lib/test.env.js"
    ],
    "roots": [
      "src/"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "aws-sdk": "^2.99.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "csv": "^1.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.7",
    "morgan": "^1.8.2",
    "mustache": "^2.3.0",
    "seedrandom": "^2.4.3",
    "superagent": "^3.5.2",
    "uuid": "^3.1.0",
    "webpack": "^3.5.4"
  },
  "devDependencies": {
    "aws-sdk-mock": "^1.7.0",
    "eslint": "^4.4.1",
    "expect": "^1.20.2",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "sinon": "^3.2.1"
  },
  "engines": {
    "node": "7.x.x"
  }
}
