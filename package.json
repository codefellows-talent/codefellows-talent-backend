{
  "name": "codefellows-talent-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/codefellows-talent/codefellows-talent-backend.git",
  "author": "Ryan Felix <therjfelix@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./",
    "prestart": "babel src -d dist",
    "start": "node dist/index.js",
    "watch": "nodemon src/index.js --exec babel-node",
    "test": "jest --runInBand",
    "test-watch": "jest --runInBand --watchAll",
    "start-db": "mkdir -p ./db && mongod --dbpath ./db",
    "stop-db": "killall mongod"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/__test__/lib/test.env.js"
    ]
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "cors": "^2.8.4",
    "csv": "^1.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.7",
    "morgan": "^1.8.2",
    "superagent": "^3.5.2",
    "uuid": "^3.1.0",
    "webpack": "^3.5.4"
  },
  "devDependencies": {
    "eslint": "^4.4.1",
    "expect": "^1.20.2",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0"
  },
  "engines": {
    "node": "7.x.x"
  }
}
